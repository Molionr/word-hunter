{
  "name": "Word Hunter",
  "description": "Discover new words you don't know",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/public/icon.png",
      "32": "/public/icon.png",
      "48": "/public/icon.png",
      "128": "/public/icon.png"
    }
  },
  "icons": {
    "16": "/public/icon.png",
    "32": "/public/icon.png",
    "48": "/public/icon.png",
    "128": "/public/icon.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"]
    }
  ]
}
